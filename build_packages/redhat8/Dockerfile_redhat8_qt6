FROM redhat/ubi8:8.10-1020 as builder-stage

# Prepare environment
RUN dnf update -y && \
  dnf install -y \
  unzip \
  curl \
  cmake \
  ninja-build \
  git \
  zlib-devel \
  mesa-libGLU-devel \
  qt6-qtbase-devel \
  qt6-qtcharts-devel \
  qt6-qtopengl-devel \
  qt6-qtimageformats \
  gcc \
  gcc-c++ && \
  dnf clean all && rm -rf /var/cache/yum
